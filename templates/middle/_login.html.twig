{% extends 'base_admin.html.twig' %}

{% block title %}DTC | Connexion {% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('dtc_fo_page') }}
    {{ encore_entry_link_tags('login_page') }}
{% endblock %}

{% block body %}
    <body class=" justify-content-center align-items-center p-5 ">
        <main class="row">
            <div class="col align-items-center justify-content-center left">
                <img src="{{ asset('images/image.svg') }}" alt="img" id="img">
            </div>
            <div class="col pt-3 log">
                <div class="justify-content-end">
                    <img src="{{ asset('images/triangle.svg') }}" alt="triangle" id="tri">
                </div>
                <header class="text-center">

                    <img src="{{ asset('images/logo2.svg') }}" alt="logo">
                    <p id="connect" class="pt-3">Connectez-vous</p>
                </header>
                <form id="loginForm" method="post" class="mx-lg-5">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="row input justify-content-center">
                        <div class="row mt-3">
                            <label for="Email" class="form-label ">Email</label>
                            <input type="email" class="form-control" id="Email" name="username" required>
                        </div>
                        <div class="row mt-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="col mt-4">
                            <input type="text" class="custom-control-input d-none"  name="_csrf_token" value="{{ csrf_token('authenticate') }}" id="customCheck">
                            <button type="submit" class="btn text-white" id="btn">connexion</button>
                        </div>
                    </div>
                    <div class="row text-center mt-5 footer">
                        <a class="small" href="{{ path('dtc_reset_password') }}">Mots de passe oubli√© ?</a>
                        <p class="footer">Vous n'avez pas encore du compte? <a href="{{ path('dtc_register') }}" class="nav-link text-primary">Inscrivez-vous</a></p>
                    </div>
                </form>
            </div>

        </main>
    </body>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('dtc_fo_page') }}
    {{ encore_entry_script_tags('login_page') }}
{% endblock %}