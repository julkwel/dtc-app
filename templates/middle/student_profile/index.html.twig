{% extends 'base_admin.html.twig' %}

{% block title %}DTC | Student
{% endblock %}

{% block body %}
	<body>
		<div class="container">
			<div class="main-body">
            
				<div class="row gutters-sm">
					<div class="col-md-4 mb-3">
						<div class="card">
							<div class="card-body">
								<div class="d-flex flex-column align-items-center text-center">
                                    <div>
                                        <a class="btn btn-info mx-3" href="{{ path("dtc_student_edit", {'id': student.id}) }}" style="position:absolute;right:0;">Edit</a>
                                        {% if student.image is not null %}
                                            <img src="data:image/jpeg;base64,{{ student.image }}" alt="{{ student.firstname }} {{ student.lastname }}" class="rounded-circle" width="150">
                                        {% else %}
                                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                        {% endif %}
                                    </div>
                                    <div class="mt-3">
                                        <h4>{{ student.firstname }} {{ student.lastname }} ({{ student.username }})</h4>
                                    </div>
                                </div>
							</div>
						</div>
						<div class="card mt-3">
							<ul class="list-group list-group-flush">
                                {% for contact in student.contacts %}
                                    <!-- Phone number -->
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0">
                                            Phone number
                                        </h6>
                                        <span class="text-secondary">{{ contact.phone }}</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github mr-2 icon-inline">
                                                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                                            </svg>Github
                                        </h6>
                                        <span class="text-secondary">{{ contact.github ?? 'N/A' }}</span>
                                    </li>

                                    <!-- Facebook -->
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary">
                                                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                                            </svg>Facebook
                                        </h6>
                                        <span class="text-secondary">{{ contact.facebook ?? 'N/A' }}</span>
                                    </li>

                                    <!-- LinkedIn -->
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="bi bi-linkedin mr-2 icon-inline text-primary">
                                                <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                                            </svg>LinkedIn
                                        </h6>
                                        <span class="text-secondary">{{ contact.linkedin ?? 'N/A' }}</span>
                                    </li>

                                    <!-- Gmail -->
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail mr-2 icon-inline text-warning">
                                                <path d="M22 2H2a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h20a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zM2 6l10 7 10-7"/>
                                                <path d="M12 15l-8-6h16l-8 6z"/>
                                            </svg>Gmail
                                        </h6>
                                        <span class="text-secondary">{{ contact.email ?? 'N/A' }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
						</div>
					</div>
					<div class="col-md-8">
						<div class="card mb-3">
                            <div class="card-header">
                                <h3>Training registered</h3>
                            </div>
							<div class="card-body">
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Module name</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										...
									</div>
								</div>
								<hr>
                                <div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Paid amount</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										...
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Total paid</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										...
									</div>
								</div>
								<hr>
							</div>
						</div>

						<div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="mb-0">Training suggestions</h3>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6 mb-3">
                                            <div class="card h-100">
