{% extends 'base_admin.html.twig' %}

{% block title %}DTC | Edit Student{% endblock %}

{% block body %}
    <div class="container">
        <h2>Edit User</h2>

        <form method="post" enctype="multipart/form-data">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.username) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}
            </div>

            <div class="form-group">
                <label for="contactToggle" class="accordion-toggle">Contact</label>
                <button type="button" id="contactToggle" data-toggle="collapse" data-target="#contactFields" aria-expanded="true">
                    Show/Hide
                </button>
                <div id="contactFields" class="collapse show">
                    <div class="form-group">
                        {{ form_label(form.contacts.0.phone, 'Phone Number') }}
                        {{ form_widget(form.contacts.0.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.contacts.0.facebook, 'Facebook Profile (optional)') }}
                        {{ form_widget(form.contacts.0.facebook, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.contacts.0.linkedin, 'LinkedIn Profile (optional)') }}
                        {{ form_widget(form.contacts.0.linkedin, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.contacts.0.github, 'GitHub Profile (optional)') }}
                        {{ form_widget(form.contacts.0.github, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.contacts.0.email, 'Email (optional)') }}
                        {{ form_widget(form.contacts.0.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            {{ form_end(form) }}
        </form>
    </div>

    <script>
        $(document).ready(function () {
            $('#contactToggle').on('click', function () {
                $('#contactFields').collapse('toggle');
            });
        });
    </script>
{% endblock %}
