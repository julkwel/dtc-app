{% extends 'admin/_entry_admin.html.twig' %}
{% block content %}
	<!-- Begin Page Content -->
	<div class="container-fluid">
		<div class="container-fluid">
			<!-- DataTales Example -->
			<div class="card shadow mb-4">
				<div class="card-header py-3">
					<h6 class="m-0 font-weight-bold text-primary">Affecter {{ student.username }} Ã  une formation</h6>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
							<thead>
							<tr>
								<th>Nom formation</th>
								<th>Etudiant</th>
								<th>Action</th>
							</tr>
							</thead>
							<tbody>
							{% for formation in lists %}
								<tr>
									<td>{{ formation.name }}</td>
									<td>{{ student.username }}</td>
									<td>
										<a class="badge badge-success" href="{{ path('admin_formation_affect_student', {'id': student.id, 'cohorte': formation.id}) }}"> Affecter </a>
									</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /.container-fluid -->
{% endblock %}